<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SocNetwork</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SocNetwork.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/main-page.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand fw-bold fs-3" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="text-primary">Soc</span><span class="text-danger">Network</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Главная</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy">Конфиденциальность</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item me-3">
                                <a class="nav-link position-relative text-dark" asp-controller="FriendShip" asp-action="Index">
                                    <i class="fas fa-bell"></i>
                                    @if (ViewBag.PendingCount != null && (int)ViewBag.PendingCount > 0)
                                    {
                                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                            @ViewBag.PendingCount
                                        </span>
                                    }
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="MyPage">
                                    <i class="fas fa-user me-1"></i>Моя страница
                                </a>
                            </li>

                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-link nav-link text-dark">
                                        <i class="fas fa-sign-out-alt me-1"></i>Выйти
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Register" asp-action="Register">
                                    <i class="fas fa-user-plus me-1"></i>Регистрация
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt me-1"></i>Войти
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- 🔹 Вот здесь обязательно должен быть RenderBody -->
    <div class="container main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-dark text-white mt-5">
        <div class="container py-3">
            <div class="row align-items-start">
                <div class="col-md-6 mb-3 mb-md-0">
                    <h5 class="fw-bold mb-2">
                        <span class="text-primary">Soc</span><span class="text-danger">Network</span>
                    </h5>
                    <p class="small mb-2">Современная социальная сеть для общения и взаимодействия</p>
                    <div class="social-links">
                        <a href="#" class="text-white me-3"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="text-white me-3"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="text-white me-3"><i class="fab fa-instagram"></i></a>
                    </div>
                </div>

                <div class="col-md-3 mb-3 mb-md-0">
                    <h6>Навигация</h6>
                    <ul class="list-unstyled small">
                        <li><a href="#" class="text-white-50 text-decoration-none">Главная</a></li>
                        <li><a href="#" class="text-white-50 text-decoration-none">О нас</a></li>
                        <li><a href="#" class="text-white-50 text-decoration-none">Контакты</a></li>
                    </ul>
                </div>

                <div class="col-md-3">
                    <h6>Информация</h6>
                    <ul class="list-unstyled small">
                        <li><a asp-controller="Home" asp-action="Privacy" class="text-white-50 text-decoration-none">Конфиденциальность</a></li>
                        <li><a href="#" class="text-white-50 text-decoration-none">Условия использования</a></li>
                    </ul>
                </div>
            </div>

            <hr class="my-3">
            <div class="text-center small">
                © 2025 — <span class="text-primary">Soc</span><span class="text-danger">Network</span>. Все права защищены.
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
