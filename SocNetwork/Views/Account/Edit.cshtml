@model SocNetwork.Models.ViewModel.UserEditViewModel

@{
    ViewData["Title"] = "Редактирование профиля";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/edit.css" asp-append-version="true" />

<div class="edit-container">
    <div class="edit-header text-center">
        <h1>✏️ Редактирование профиля</h1>
        <p>Обновите информацию о себе</p>
    </div>

    <div class="edit-content">
        <!-- Аватар -->
        <div class="avatar-section text-center mb-4">
            <img src="@(Model.Image ?? "/images/default-avatar.png")" alt="Аватар" class="avatar mb-2" id="avatarPreview">
            <form asp-controller="Account" asp-action="UploadAvatar" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <label class="btn-outline-gradient w-100" style="cursor:pointer;">
                    📸 Сменить фото
                    <input type="file" name="avatar" accept="image/*" onchange="this.form.submit()" hidden />
                </label>
            </form>
        </div>

        <form asp-controller="Account" asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label>Фамилия</label>
                <input asp-for="LastName" class="form-control" placeholder="Фамилия">
            </div>

            <div class="form-group mb-3">
                <label>Имя</label>
                <input asp-for="FirstName" class="form-control" placeholder="Имя">
            </div>

            <div class="form-group mb-3">
                <label>Отчество</label>
                <input asp-for="MiddleName" class="form-control" placeholder="Отчество">
            </div>

            <div class="form-group mb-3">
                <label>Email</label>
                <input asp-for="Email" class="form-control" readonly>
            </div>

            <div class="form-group mb-3">
                <label>Дата рождения</label>
                <input asp-for="BirthDate" type="date" class="form-control">
            </div>

            <div class="form-group mb-3">
                <label>Статус</label>
                <input asp-for="Status" class="form-control" placeholder="Как ваше настроение?">
            </div>

            <div class="form-group mb-3">
                <label>О себе</label>
                <textarea asp-for="About" class="form-control" rows="4" placeholder="Расскажите о себе..."></textarea>
            </div>

            <div class="form-actions mt-4 text-center">
                <a asp-controller="Account" asp-action="MyPage" class="btn btn-secondary me-2">Отмена</a>
                <button type="submit" class="btn-outline-gradient">💾 Сохранить изменения</button>
            </div>
        </form>
    </div>
</div>
