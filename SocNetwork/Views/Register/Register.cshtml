@model SocNetwork.Models.ViewModel.RegisterViewModel

@{
    ViewData["Title"] = "Регистрация";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Регистрация - SocNetwork</title>
    <link rel="stylesheet" href="~/css/register.css">
</head>
<body>
    <div class="register-container">
        <div class="register-header">
            <h1>👋 Добро пожаловать!</h1>
            <p>Присоединяйтесь к нашему сообществу</p>
        </div>

        <div class="register-content">
            <form method="post" asp-controller="Register" asp-action="Register">
                <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

                <!-- Имя, Фамилия и Отчество -->
                <div class="name-grid">
                    <div class="form-group">
                        <label asp-for="FirstName">👤 Имя</label>
                        <input asp-for="FirstName" class="input-field" placeholder="Ваше имя">
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName">👥 Фамилия</label>
                        <input asp-for="LastName" class="input-field" placeholder="Ваша фамилия">
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>

                <!-- Отчество -->
                <div class="form-group">
                    <label asp-for="MiddleName">📝 Отчество</label>
                    <input asp-for="MiddleName" class="input-field" placeholder="Ваше отчество (необязательно)">
                    <span asp-validation-for="MiddleName" class="text-danger"></span>
                </div>

                <!-- Никнейм -->
                <div class="form-group">
                    <label asp-for="Login">🎯 Никнейм</label>
                    <input asp-for="Login" class="input-field" placeholder="Придумайте уникальный никнейм">
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>

                <!-- Email -->
                <div class="form-group">
                    <label asp-for="EmailReg">📧 Email</label>
                    <input asp-for="EmailReg" class="input-field" type="email" placeholder="example@mail.com">
                    <span asp-validation-for="EmailReg" class="text-danger"></span>
                </div>

                <!-- Дата рождения -->
                <div class="form-group compact-date">
                    <label>🎂 Дата рождения</label>
                    <div class="birth-date-grid">
                        <div class="form-group">
                            <input asp-for="Date" class="input-field" type="number" min="1" max="31" placeholder="День">
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Month" class="input-field" type="number" min="1" max="12" placeholder="Месяц">
                            <span asp-validation-for="Month" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Year" class="input-field" type="number"
                                   min="@(DateTime.Now.Year - 100)"
                                   max="@(DateTime.Now.Year - 10)"
                                   placeholder="Год">
                            <span asp-validation-for="Year" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Пароль -->
                <div class="form-group">
                    <label asp-for="PasswordReg">🔒 Пароль</label>
                    <input asp-for="PasswordReg" class="input-field" type="password" placeholder="Не менее 5 символов">
                    <span asp-validation-for="PasswordReg" class="text-danger"></span>
                </div>

                <!-- Подтверждение пароля -->
                <div class="form-group">
                    <label asp-for="PasswordConfirm">✅ Подтверждение пароля</label>
                    <input asp-for="PasswordConfirm" class="input-field" type="password" placeholder="Повторите пароль">
                    <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                </div>

                <!-- Кнопка регистрации -->
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        🚀 Зарегистрироваться
                    </button>
                </div>

                <!-- Ссылка на вход -->
                <div class="login-link">
                    <p>
                        Уже есть аккаунт?
                        <a asp-controller="Account" asp-action="Login" class="text-decoration-none">Войти</a>
                    </p>
                </div>
            </form>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const inputs = document.querySelectorAll('.input-field');
            inputs.forEach(input => {
                input.addEventListener('focus', function() {
                    this.style.transform = 'translateY(-2px)';
                });
                input.addEventListener('blur', function() {
                    this.style.transform = 'translateY(0)';
                });
            });
        });
    </script>
</body>
</html>